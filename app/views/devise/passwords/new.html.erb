<div class="row d-flex justify-content-center">
  <h2>Забыли пароль?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name),
               html: { method: :post, data: { turbo: false } }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="col-sm-3 mt-3">
      <%= f.label :email, class: "col-sm-1 col-form-label" %>
      <div class="input-group">
        <div class="input-group-text"><i class="bi bi-mailbox"></i></div>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control",
                          placeholder: "example@example.com" %>
      </div>
    </div>

    <div class="mt-2">
      <%= f.submit t("button.send_instruction"), class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="mt-2">
    <%= render "devise/shared/links" %>
  </div>
</div>
