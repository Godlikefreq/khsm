<div class="row d-flex justify-content-center">
<h2><%= t('.change_your_password') %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put,
                                                                                     data: { turbo: false } }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="col-sm-3 mt-3">
    <%= f.label :password, t('.new_password'), class: "col-sm-2 col-form-label" %>
    <% if @minimum_password_length %>
      <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
    <% end %>
    <div class="input-group">
      <div class="input-group-text"><i class="bi bi-key-fill"></i></div>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control",
                           placeholder: "******" %>
    </div>
  </div>

  <div class="col-sm-3 mt-1">
    <%= f.label :password_confirmation, t('.confirm_new_password'), class: "col-sm-8 col-form-label" %>
    <div class="input-group">
      <div class="input-group-text"><i class="bi bi-key-fill"></i></div>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control",
                           placeholder: "******" %>
    </div>
  </div>

  <div class="mt-2">
    <%= f.submit t('.change_my_password'), class: "btn btn-primary" %>
  </div>
<% end %>

  <div class="mt-2">
    <%= render "devise/shared/links" %>
  </div>
</div>
