<div class="row d-flex justify-content-center">
  <h2>Сменить пароль</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, data: { turbo: false } }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="col-sm-3 mt-3">
      <%= f.label :email, class: "col-sm-1 col-form-label" %>
      <div class="input-group">
        <div class="input-group-text"><i class="bi bi-mailbox"></i></div>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="col-sm-3 mt-1">
      <%= f.label :password, class: "col-sm-1 col-form-label" %>
      <p class="fw-light mt-0">(оставьте пустым, если не хотите менять)</p>
      <div class="input-group">
        <div class="input-group-text"><i class="bi bi-key-fill"></i></div>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control",
                             placeholder: "******" %>
      </div>
      <% if @minimum_password_length %>
        <em>Не менее <%= @minimum_password_length %> символов</em>
      <% end %>
    </div>

    <div class="col-sm-3 mt-1">
      <%= f.label :password_confirmation, class: "col-sm-8 col-form-label" %>
      <div class="input-group">
        <div class="input-group-text"><i class="bi bi-key-fill"></i></div>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control",
                             placeholder: "******" %>
      </div>
    </div>

    <div class="col-sm-3 mt-1">
      <%= f.label :current_password, class: "col-sm-6 col-form-label" %>
      <p class="fw-light">(для подтверждения введите текущий пароль)</p>
      <div class="input-group">
        <div class="input-group-text"><i class="bi bi-key-fill"></i></div>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control",
                             placeholder: "******" %>
      </div>
    </div>

    <div class="mt-2">
      <%= f.submit "Сохранить", class: "btn btn-primary" %>
    </div>
  <% end %>

  <h3 class="mt-5">Удалить аккаунт</h3>

  <p>Не понравилось у нас? </p>
  <p><%= link_to "Удалить мой аккаунт", registration_path(resource_name),
                 class: "btn btn-danger", data: { turbo_method: :delete, turbo_confirm: "Вы уверены?" } %></p>

  <%= link_to "Вернуться", :back %>
</div>
